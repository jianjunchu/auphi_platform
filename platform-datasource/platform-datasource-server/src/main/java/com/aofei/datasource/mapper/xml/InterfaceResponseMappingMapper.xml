<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aofei.datasource.mapper.InterfaceResponseMappingMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.aofei.datasource.entity.InterfaceResponseMapping">
        <id column="INTERFACE_RESPONSE_MAPPING_ID" property="interfaceResponseMappingId" />
        <result column="ORGANIZER_ID" property="organizerId" />
        <result column="INTERFACE_ID" property="interfaceId" />
        <result column="JSON_PATH" property="jsonPath" />
        <result column="FIELD_NAME" property="fieldName" />
        <result column="FIELD_DESC" property="fieldDesc" />
        <result column="CREATE_USER" property="createUser" />
        <result column="UPDATE_USER" property="updateUser" />
        <result column="CREATE_TIME" property="createTime" />
        <result column="UPDATE_TIME" property="updateTime" />
        <result column="DEL_FLAG" property="delFlag" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
          a.INTERFACE_RESPONSE_MAPPING_ID AS interfaceResponseMappingId
        , a.ORGANIZER_ID AS organizerId
        , a.INTERFACE_ID AS interfaceId
        , a.JSON_PATH AS jsonPath
        , a.FIELD_NAME AS fieldName
        , a.FIELD_DESC AS fieldDesc
        , a.CREATE_USER AS createUser
        , a.UPDATE_USER AS updateUser
        , a.CREATE_TIME AS createTime
        , a.UPDATE_TIME AS updateTime
        , a.DEL_FLAG AS delFlag
    </sql>

    <select id="findList"  resultType="com.aofei.datasource.entity.InterfaceResponseMapping">
        select
        <include refid="Base_Column_List"/>
        from DATASOURCE_INTERFACE_RESPONSE_MAPPING a

        <where>
            <if test="organizerId != null ">
                AND a.ORGANIZER_ID = #{organizerId}
            </if>
            <if test="interfaceId != null ">
                AND a.INTERFACE_ID  = #{interfaceId}
            </if>

        </where>
    </select>

</mapper>
