<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aofei.datasource.mapper.InterfaceMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.aofei.datasource.entity.Interface">
        <id column="INTERFACE_ID" property="interfaceId" />
        <result column="ORGANIZER_ID" property="organizerId" />
        <result column="INTERFACE_NAME" property="interfaceName" />
        <result column="INTERFACE_URL" property="interfaceUrl" />
        <result column="REQUEST_TYPE" property="requestType" />
        <result column="INTERFACE_DESC" property="interfaceDesc" />
        <result column="RETURN_DESC" property="returnDesc" />
        <result column="TIMEOUT" property="timeout" />
        <result column="CREATE_USER" property="createUser" />
        <result column="UPDATE_USER" property="updateUser" />
        <result column="CREATE_TIME" property="createTime" />
        <result column="UPDATE_TIME" property="updateTime" />
        <result column="DEL_FLAG" property="delFlag" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
          a.INTERFACE_ID AS interfaceId
        , a.ORGANIZER_ID AS organizerId
        , a.INTERFACE_NAME AS interfaceName
        , a.INTERFACE_URL AS interfaceUrl
        , a.REQUEST_TYPE AS requestType
        , a.INTERFACE_DESC AS interfaceDesc
        , a.RETURN_DESC AS returnDesc
        , a.TIMEOUT AS timeout
        , a.CREATE_USER AS createUser
        , a.UPDATE_USER AS updateUser
        , a.CREATE_TIME AS createTime
        , a.UPDATE_TIME AS updateTime
        , a.DEL_FLAG AS delFlag
    </sql>

    <select id="findList"  resultType="com.aofei.datasource.entity.Interface">
        select
        <include refid="Base_Column_List"/>
        from DATASOURCE_INTERFACE a

        <where>
            <if test="organizerId != null ">
                AND a.ORGANIZER_ID = #{organizerId}
            </if>
            <if test="requestType != null ">
                AND a.REQUEST_TYPE  = #{requestType}
            </if>
            <if test="interfaceName != null and interfaceName!=''">
                AND a.INTERFACE_NAME  like  '%${interfaceName}%'
            </if>
        </where>
    </select>


</mapper>
